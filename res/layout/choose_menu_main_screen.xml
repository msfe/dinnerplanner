<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/this_is_chooseMenu_mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <TextView
        android:id="@+id/exampleStarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exampleStarter2"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/mainCourse"
        android:text="Baked Brie"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/exampleStarter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainCourse"
        android:layout_alignLeft="@+id/starterHeadLine"
        android:text="Sourdough"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/exampleMainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dessertHeader"
        android:layout_alignLeft="@+id/mainCourse"
        android:text="Meatballs"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/starterHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exampleStarter2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="53dp"
        android:layout_marginLeft="28dp"
        android:text="@string/starter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/exampleDessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dessertHeader"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:text="Toast"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/exampleDessert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exampleDessert"
        android:layout_alignBottom="@+id/exampleDessert"
        android:layout_alignLeft="@+id/exampleStarter"
        android:text="Icecream"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/dessertHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exampleDessert"
        android:layout_alignRight="@+id/exampleMainCourse"
        android:layout_marginBottom="60dp"
        android:text="@string/dessert"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exampleMainCourse"
        android:layout_alignLeft="@+id/exampleStarter2"
        android:layout_marginBottom="64dp"
        android:text="@string/main_course"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <HorizontalScrollView
        android:id="@+id/dessertScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/exampleDessert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="32dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/mainCourseScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/starterScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/starterHeadLine" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/chooseMenuHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/starterScrollView"
        android:layout_marginBottom="19dp"
        android:layout_toRightOf="@+id/exampleStarter2"
        android:text="@string/choose_menu"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/starterHeadLine"
        android:layout_centerHorizontal="true"
        android:text="----------------------------------------------------"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/chooseDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/mainCourse"
        android:background="#ff0000"
        android:text="@string/choose"
        ></Button>

</RelativeLayout>